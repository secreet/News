<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/news_iv_icon"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/news_iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/news_iv_icon"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <TextView
        android:id="@+id/news_iv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/news_iv_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="123eqwe"
        android:textColor="#ff666666"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/news_iv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/news_iv_title"
        android:layout_below="@id/news_iv_title"
        android:paddingLeft="10dp"
        android:scrollHorizontally="true"
        android:lines="1"
        android:text="qwoiuhdnjoksanjdo"/>
</RelativeLayout>